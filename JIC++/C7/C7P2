int day_twelve(){

  std::cout << "On the twelfth day of Christmas, my true love sent to me:\n";
  std::cout << "12 Drummers Drumming\n";
  std::cout << "Eleven Pipers Piping\n";
  std::cout << "Ten Lords a Leaping\n";
  std::cout << "Nine Ladies Dancing\n";
  std::cout << "Eight Maids a Milking\n";
  std::cout << "Seven Swans a Swimming\n";
  std::cout << "Six Geese a Laying\n";
  std::cout << "Five Golden Rings\n";
  std::cout << "Four Calling Birds\n";
  std::cout << "Three French Hens\n";
  std::cout << "Two Turtle Doves\n";
  std::cout << "And a Partridge in a Pear Tree\n" << std::endl;

  return 13;
}

#include <iostream>

int main(){

/* The following line(s) are for creating and initializing variables. */
int current_day = 1;

/* This loop will call certain functions based on their return number that gets stored into the current_day variable. It will continue until the number isn't less than or equal to the number 12. */

do{

  switch (current_day){
    
    case 12:
      current_day = day_twelve();
      break;
  
    case 11:
      current_day = day_eleven();
      continue;
  
    case 10:
      current_day = day_ten();
      continue;
  
    case 9:
      current_day = day_nine();
      continue;
  
    case 8:
      current_day = day_eight();
      continue;
  
    case 7:
      current_day = day_seven();
      continue;

    case 6: 
      current_day = day_six();
      continue;

    case 5:
      current_day = day_five();
      continue;

    case 4:
      current_day = day_four();
      continue;

    case 3:
      current_day = day_three();
      continue;

    case 2:
      current_day = day_two();
      continue;

    case 1:
      current_day = day_one();
      continue;

    default:
      return 1;
  }

} while (current_day <= 12);

  return 0;
}
